<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/home.css" />

<body>
  <div class="home-container">
    <div class="navbar">
      <div class="navigation-menu">
        <div class="brand-logo">
          <a href="/admin"
            ><img src="/img/amaya-logo.png" alt="brand-logo"
          /></a>
        </div>
        <ul class="nav">
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link active" href="/admin" style="font-size: 22px"
              >Home</a
            >
          </li>
          <% if(!member) { %>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link navbar-button" href="/admin/signup">Signup</a>
          </li>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link navbar-button" href="/admin/login">Login</a>
          </li>
          <% } else { %>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link" href="/admin/product/all">Products</a>
          </li>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link" href="/admin/user/all">Members</a>
          </li>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link" href="/admin/order/all">Orders</a>
          </li>
          <li
            class="nav-item"
            style="cursor: pointer"
            onclick="return confirm('Do you want to logout?')"
          >
            <a class="nav-link" href="/admin/logout">Logout</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>

    <div class="main-content">
      <div class="main-img">
        <img src="/img/main-page-poster.png" alt="" />
      </div>
      <div class="main-text">
        <p>What's new?</p>
        <div class="content-title">Meet our new coffee!</div>
        <div class="content-subtitle">
          Try one of our signature selections and see what everyone's talking
          about or select 'Catalogue' at the top of the page to view all the
          possibilities.
        </div>
        <div class="content-button">
          <a href="/" target="_blank" rel="noopener noreferrer">
            <span>Store</span> <img src="/img/left-button.svg" alt="" />
          </a>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/js/home.js"></script>
  </div>
</body>

<%- include('includes/footer') %>
